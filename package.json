{
  "_ai_rules": {
    "github_dependencies": {
      "langgexyz/*": {
        "version_pattern": "semver:\\^[1-9][0-9]*\\.[0-9]+\\.[0-9]+$",
        "forbidden_patterns": [
          "semver:\\^[0-9]+\\.[0-9]+\\.[0-9]+-[a-zA-Z]",
          "semver:\\^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+"
        ],
        "description": "package.json 中只能使用稳定版本范围，如 ^1.0.0，禁止直接写预发布版本如 ^1.0.0-alpha.4"
      }
    }
  },
  "name": "ts-xutils",
  "version": "1.0.1",
  "description": "typescript: Duration and so on",
  "author": "xpwu",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "browser": "dist/umd/index.js",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "28.1.3",
    "@types/node": "^20.0.0",
    "jest": "28.1.1",
    "ts-jest": "28.0.5",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.json",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build:types": "tsc -p tsconfig.types.json",
    "tsc": "tsc",
    "test": "jest"
  },
  "keywords": [
    "ts",
    "typescript",
    "Duration"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "index.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/langgexyz/ts-xutils.git"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "test/(.+)\\.test\\.(tsx?)$"
  },
  "miniprogram": "."
}
